<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/main_scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_profile_bottom_chatAndCall_layout"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_profile_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#FFFFFF"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/layout_edit_profile"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/pencil_edit" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/dummy_layout"
                    android:layout_width="85dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp" />

                <core.Widgets.CircularImageView
                    android:id="@+id/profile_user_img"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/chatprofile" />

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/dummy_layout"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rating_background"
                    android:elevation="10dp">

                    <ImageView
                        android:id="@+id/ratingimage"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/white_staricon" />

                    <com.widget.CustomTextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="3dp"
                        android:layout_toEndOf="@+id/ratingimage"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/profile_user_img">

                    <com.widget.CustomTextView
                        android:id="@+id/profile_username_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.widget.CustomTextView
                        android:id="@+id/profile_email_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_username_Tv"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <com.widget.CustomTextView
                        android:id="@+id/profile_mobile_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_email_Tv"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_layout"
                    android:layout_marginTop="15dp"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="18dp"
                        android:layout_weight="1"
                        android:background="@drawable/radius_background"
                        android:visibility="gone">

                        <com.widget.CustomTextView
                            android:id="@+id/radius_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="Radius"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.widget.CustomTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/radius_text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text=" "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginStart="18dp"
                        android:layout_weight="1"
                        android:background="@drawable/radius_background"
                        android:visibility="invisible">

                        <com.widget.CustomTextView
                            android:id="@+id/hour_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="Hourly Cost"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.widget.CustomTextView
                            android:id="@+id/h_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hour_cost"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text=" "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_weight="1"
                        android:background="@drawable/radius_background"
                        android:visibility="invisible">

                        <com.widget.CustomTextView
                            android:id="@+id/maximum_cost_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text="Min Cost"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.widget.CustomTextView
                            android:id="@+id/maximum_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/maximum_cost_text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:text=" "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray"></View>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_layout"
                android:background="#FFFFFF">

                <RelativeLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#F5F5F5"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/address_icon1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/location_address" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/icon_down_arrow_expand"
                        android:visibility="gone" />

                    <com.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/address_icon1"
                        android:text="@string/new_tasker_profile_address"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/location_layouts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_layout"
                    android:background="@color/white"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/address_icon"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="26dp"
                        app:srcCompat="@drawable/dot_icon" />

                    <com.widget.CustomTextView
                        android:id="@+id/profile_address_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toEndOf="@+id/address_icon"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <View
                        android:id="@+id/addressview"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#9b9b9b"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/location_layouts"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/category_icon1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/cate_image" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/icon_down_arrow_expand"
                        android:visibility="gone" />

                    <com.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/category_icon1"
                        android:text="@string/new_tasker_profile_category"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cat_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_layout"
                    android:background="#FFFFFF">

                    <ListView
                        android:id="@+id/cat_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="#FFFFFF"
                        android:visibility="visible">

                    </ListView>

                    <ImageView
                        android:id="@+id/category_icon"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="26dp"
                        app:srcCompat="@drawable/dot_icon"
                        android:visibility="gone" />

                    <com.widget.CustomTextView
                        android:id="@+id/profile_category_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toEndOf="@+id/category_icon"
                        android:text="Kitchen Cleaning"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/worklocation_header"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/cat_layout"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/location_icon1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/location_address" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/icon_down_arrow_expand"
                        android:visibility="gone" />

                    <com.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/location_icon1"
                        android:text="@string/new_tasker_profile_work_location"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tasker_work_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/worklocation_header"
                    android:background="#FFFFFF">

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="26dp"
                        app:srcCompat="@drawable/dot_icon" />

                    <com.widget.CustomTextView
                        android:id="@+id/profile_worklocation_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toEndOf="@+id/location_icon"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/radius_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_below="@+id/tasker_work_location"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/radius_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/location_address" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/icon_down_arrow_expand"
                        android:visibility="gone" />

                    <com.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/radius_icon"
                        android:text="@string/new_tasker_profile_radius"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/radius_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radius_layout"
                    android:background="#FFFFFF"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/radius_point_icon"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="26dp"
                        app:srcCompat="@drawable/dot_icon" />

                    <com.widget.CustomTextView
                        android:id="@+id/profile_radius_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toEndOf="@+id/radius_point_icon"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experience_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/radius_text_layout"
                    android:background="@color/white"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/experience_icon1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/exp_icon" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/icon_down_arrow_expand"
                        android:visibility="gone" />

                    <com.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/experience_icon1"
                        android:text="@string/new_tasker_profile_working_experience"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/exp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/experience_layout"
                    android:background="#FFFFFF"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/experience_icon"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="26dp"
                        app:srcCompat="@drawable/dot_icon" />

                    <com.widget.CustomTextView
                        android:id="@+id/profile_experience_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_toEndOf="@+id/experience_icon"
                        android:text="Experience 7 years "
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/availability_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/exp_layout"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/availability_icon1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/availability_icons" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/icon_down_arrow_expand"
                        android:visibility="gone" />

                    <com.widget.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/availability_icon1"
                        android:text="@string/activity_tasker_profile_view_TXT_availability_title"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/availability_text">

                    <RelativeLayout
                        android:id="@+id/avail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <com.widget.CustomTextView
                            android:id="@+id/availability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="6dp"
                            android:text="@string/availability_title"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:id="@+id/day_session"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/availability"
                            android:weightSum="4">

                            <com.widget.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:paddingStart="10dp"
                                android:text="@string/edit_avail_days"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <com.widget.CustomTextView
                                android:id="@+id/mor"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingStart="10dp"
                                android:text="@string/mor"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <com.widget.CustomTextView
                                android:id="@+id/after"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingStart="10dp"
                                android:text="@string/after"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                            <com.widget.CustomTextView
                                android:id="@+id/eve"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingStart="10dp"
                                android:text="@string/eve"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/day_session"
                            android:weightSum="4">

                            <com.widget.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1" />

                            <com.widget.CustomTextView
                                android:id="@+id/mor_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingStart="10dp"
                                android:text="(8 AM-12 PM)"
                                android:textColor="#8e8e8e"
                                android:textSize="9sp" />

                            <com.widget.CustomTextView
                                android:id="@+id/after_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingStart="10dp"
                                android:text="(12 PM-4 PM)"
                                android:textColor="#8e8e8e"
                                android:textSize="9sp" />

                            <com.widget.CustomTextView
                                android:id="@+id/eve_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:paddingStart="10dp"
                                android:text="(4 PM-8 PM)"
                                android:textColor="#8e8e8e"
                                android:textSize="9sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/avail">

                        <ListView
                            android:id="@+id/list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="#FFFFFF"
                            android:focusable="false"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/myProfileAvailabilityRV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="true" />

                        <ExpandableListView
                            android:id="@+id/availabity_EXPLV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:childDivider="#ffffff"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="1dp"
                            android:fillViewport="true"
                            android:groupIndicator="@null"
                            android:listSelector="@android:color/transparent"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone" />


                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_profile_noInternet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fillViewport="true">

                    <include
                        android:id="@+id/profilereviwes_nointernet_include"
                        layout="@layout/no_internet_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </ScrollView>


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/view_profile_bottom_chatAndCall_layout"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/view_profile_chat_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone" />

                <com.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_profile_call_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/appmain_color"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone" />

                <com.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/book"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>