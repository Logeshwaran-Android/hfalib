<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginpage_LAY_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colour_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:id="@+id/logipage_backimg_label"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:srcCompat="@drawable/back_arrow_black" />
        </RelativeLayout>

        <core.Widgets.CustomTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mainpage_logineithemail_textview_lable"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:id="@+id/aboutus_toolbar_shadow_layout"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@xml/toolbar_shadow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/ic_mail" />


        <EditText
            android:id="@+id/loginpage_email_edittext_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="5dp"
            android:background="@drawable/edittext_background_white_black"
            android:cursorVisible="true"
            android:gravity="center|start"
            android:hint="@string/loginpage_edittext_lable_email_hint"
            android:imeOptions="actionNext"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/ic_pass" />

        <EditText
            android:id="@+id/loginpage_password_edittext_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="5dp"
            android:background="@drawable/edittext_background_white_black"
            android:gravity="center|start"
            android:hint="@string/loginpage_edittext_lable_password_hint"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/logipage_login_label"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/button_curve_background_appmain"
        android:gravity="center"
        android:text="@string/loginpage_textview_lable"
        android:textColor="@color/colour_white"
        android:textSize="18sp" />


    <RelativeLayout
        android:id="@+id/loginpage_no_account_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <core.Widgets.CustomTextView
            android:id="@+id/loginpage_no_account_labelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginpage_edittext_lable_notaccouvt_Textview"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <core.Widgets.CustomTextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/loginpage_no_account_labelTv"
            android:text="@string/loginpage_signup_textview_lable"
            android:textColor="@color/appmain_color"
            android:textSize="16sp" />

        <core.Widgets.CustomTextView
            android:id="@+id/here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/sign"
            android:text="@string/loginpage_here_textview_lable"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginpage_forgt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center|end">

        <core.Widgets.CustomTextView
            android:id="@+id/loginpage_forgt_passwordTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center|end"
            android:text="@string/action_label_forgotpassword_label"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>