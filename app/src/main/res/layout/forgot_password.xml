<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colour_white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/layout_forgot_password_header"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/layout_forgot_pwd_header"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">


                <RelativeLayout
                    android:id="@+id/layout_forgot_pwd_back"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/back_otp"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        app:srcCompat="@drawable/back_arrow_black" />

                </RelativeLayout>

                <core.Widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/action_label_forgotpassword_header"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>


        <View
            android:id="@+id/aboutus_toolbar_shadow_layout"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/layout_forgot_password_header"
            android:background="@xml/toolbar_shadow" />

        <RelativeLayout
            android:id="@+id/layout_forgotpwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <core.Widgets.CustomTextView
                android:id="@+id/textView1_enteremail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:text="@string/forgotpassword"
                android:textColor="#000000"
                android:typeface="sans" />


            <core.Widgets.CustomEdittext
                android:id="@+id/editText_email_forgotpwd"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/textView1_enteremail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edittext_background_white_black"
                android:hint="@string/enteremail"
                android:inputType="textEmailAddress"
                android:paddingStart="5dp"
                android:textColor="#000000"
                android:typeface="sans" />


            <RelativeLayout
                android:id="@+id/settings_forgotpwd_button"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/editText_email_forgotpwd"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@color/appmain_color"
                android:focusable="false">

                <core.Widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:paddingStart="3dp"
                    android:text="@string/forgotpasswordlink"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:typeface="sans" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>