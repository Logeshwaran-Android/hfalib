<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/otp_label_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp">

            <core.Widgets.CustomTextView
                android:id="@+id/job_otp_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="@string/edit_profile_otplayout_otp_here"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editmobilno_otp_Et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_otp_enter"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:background="@xml/custom_curv_layout_grey"
                android:gravity="top|start"
                android:hint="@string/edit_profile_otplayout_otp_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="15sp"
                android:typeface="sans"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otp_label_layout"
            android:layout_marginTop="8dp">

            <core.Widgets.CustomButtonViewBold
                android:id="@+id/otp_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/register_continue_button_bg"
                android:padding="5dp"
                android:text="@string/lbel_notification_ok"
                android:textColor="@color/white" />

            <core.Widgets.CustomButtonViewBold
                android:id="@+id/otp_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:background="@drawable/register_continue_button_bg"
                android:padding="5dp"
                android:text="@string/action_complete_cancel"
                android:textColor="@color/white" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>



