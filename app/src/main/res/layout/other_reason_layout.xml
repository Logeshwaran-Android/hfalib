<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#FFFFFF">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:id="@+id/cancel_reason_header_Rl"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:foregroundGravity="center"
        android:text="@string/cancel_dialog_title"
        android:textColor="#000"
        android:textSize="16sp"/>


</RelativeLayout>
    <LinearLayout
        android:id="@+id/other_reason_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/chatprofileview">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/other_reason_ET"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="@drawable/edittext_background"
            android:gravity="top|left"
            android:hint="@string/cancel_other_edit_hint_txt"
            android:inputType="textMultiLine"
            android:lines="30"
            android:minLines="6"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textCursorDrawable="@xml/edittext_cursor_color_grey"
            android:textSize="14sp"
            app:met_accentTypeface="fonts/Roboto-Regular.ttf"
            app:met_autoValidate="true"
            app:met_baseColor="#00000000"
            app:met_clearButton="false"
            app:met_errorColor="#00000000"
            app:met_floatingLabel="none"
            app:met_floatingLabelTextColor="#00000000"
            app:met_hideUnderline="true"
            app:met_iconPadding="0dp"
            app:met_primaryColor="#00000000"
            app:met_textColor="#9e9e9e"
            app:met_textColorHint="#7c7b7b"
            app:met_typeface="fonts/Roboto-Regular.ttf"
            app:met_underlineColor="#00000000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/instruction_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/appmain_color">


        <View
            android:id="@+id/view2"
            android:layout_width="1px"
            android:layout_height="19dp"
            android:layout_below="@+id/view1"
            android:layout_centerInParent="true"
            android:background="@color/white_color"></View>

        <RelativeLayout
            android:id="@+id/cancel_RL"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/view2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/cancel"
                android:gravity="center"
                                android:textColor="@color/white_color"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ok_RL"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/view2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/action_ok"
                android:textColor="@color/white_color"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>